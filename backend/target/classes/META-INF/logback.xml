<configuration scan="true" scanPeriod="30 seconds">

    <define name="INCLUDED_FILE_EXISTS" class="ch.qos.logback.core.property.FileExistsPropertyDefiner">
        <path>${acts.home}/config/gateway/logback-prod.xml</path>
    </define>

    <if condition='property("INCLUDED_FILE_EXISTS").equals("true")'>
        <then>
            <include file="${ACSN_GATEWAY_HOME}/logback-prod.xml" />
        </then>
    </if>

    <if condition='property("INCLUDED_FILE_EXISTS").equals("false")'>
        <then>
            <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
                <layout class="ch.qos.logback.classic.PatternLayout">
                    <Pattern>%d %p [%c] - &lt;%m&gt;%n</Pattern>
                </layout>
            </appender>

            <logger name="org.jboss.weld" level="TRACE"/>
            <logger name="acts" level="TRACE"/>

            <root level="TRACE">
                <appender-ref ref="stdout"/>
            </root>
        </then>
    </if>

</configuration>